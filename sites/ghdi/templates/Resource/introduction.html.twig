{% extends 'Base/base.html.twig' %}

{% import 'Shared/resource.html.twig' as resource_helper %}

{% block head %}
    {{ resource_helper.volume_background(volume, 'section.banner', true) }}
{% endblock %}

{% block maincontainer %}
<main role="main" class="introduction {{ volume.getId(true) }}">
{% block body %}
<section class="top banner">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="wrapper d-flex flex-column">
                    <h1 class="mt-auto">{{ volume.title }}</h1>
                </div>
                <p>
                    {{ resource_helper.volume_responsible(volume) }}
                </p>
            </div>
        </div><!-- .row -->
    </div><!-- .container -->
</section><!-- .section -->
<section>
    <div class="container">
        <div class="row">
            <div class="col">
                {{ resource_helper.breadcrumb(resource, navigation) }}
            </div>
        </div>
        <div class="row">
            {% if parts.toc is defined and parts.toc is not empty %}
            <aside class="sidebar order-md-2 col-md-3 offset-lg-1">
                <h4>{{ 'Table of Contents'|trans }}</h4>
                <ul class="list-unstyled">
                {% for section in parts.toc %}
                    <li><a href="#{{ section.id }}">{{ section.text }}</a></li>
                {% endfor %}
                </ul>
            </aside>
            {% endif %}
            <article class="content introduction col-md-9 col-lg-8">
                {{ parts.body|raw }}
            </article>
        </div><!-- .row -->
    </div>
</section>
{% endblock %}
</main>
{% endblock %}
